depend() {
	need localmount
	after net
	keyword -timeout
}

start() {
	ebegin "Starting plex-media-server"
	. /etc/default/plexmediaserver
	start-stop-daemon --start -b -x /usr/sbin/start_pms -u $PLEX_MEDIA_SERVER_USER
	eend $?
}

stop() {
	ebegin "Stopping plex-media-server"
	killall -g start_pms
	eend $?
}
